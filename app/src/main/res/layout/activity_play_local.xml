<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chess_bg_light"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <ImageView
        android:src="@drawable/ic_chess_logo"
        android:tint="@color/chess_primary"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Игра с другом"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/chess_primary"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnStartLocalGame"
        android:text="Начать игру"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chess_primary"
        android:textColor="@color/chess_text_light"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnBack"
        android:text="Назад"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/chess_secondary"
        android:textColor="@color/chess_text_dark" />
</LinearLayout>
